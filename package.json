{
    "name": "dp-img-2-dds",
    "version": "1.0.1",
    "description": "Convert any image extension to .dds format for Drift Paradise stickers",
    "main": "build/src/index.js",
    "bin": "build/src/index.js",
    "type": "module",
    "engines": {
        "node": ">=16.6.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "clean": "rimraf build",
        "dev": "ts-node-esm src/index.ts",
        "build": "npm run clean && tsc -p tsconfig.release.json",
        "build:watch": "tsc -w -p tsconfig.release.json",
        "start": "node ./build/src/index.js",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix"
    },
    "author": "arcetros",
    "license": "MIT",
    "devDependencies": {
        "@types/figlet": "^1.5.6",
        "@types/fs-extra": "^11.0.1",
        "@types/inquirer": "^9.0.3",
        "@types/node": "^18.16.3",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "eslint": "^8.39.0",
        "prettier": "^2.8.8",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5"
    },
    "eslintConfig": {
        "parser": "@typescript-eslint/parser",
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {},
        "overrides": [
            {
                "files": [
                    "*.js"
                ],
                "parserOptions": {
                    "sourceType": "script"
                },
                "rules": {
                    "@typescript-eslint/no-var-requires": "off"
                }
            }
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "printWidth": 120,
        "proseWrap": "never"
    },
    "dependencies": {
        "@types/ramda": "^0.28.23",
        "bufferpack": "^0.0.6",
        "chalk": "^5.2.0",
        "execa": "npm:@esm2cjs/execa@^6.1.1-cjs.1",
        "figlet": "^1.6.0",
        "fs-extra": "^11.1.1",
        "image-js": "^0.35.3",
        "inquirer": "^9.1.5",
        "ora": "^6.3.0",
        "platform-folders": "^0.6.0",
        "ramda": "^0.29.0",
        "rcedit": "^3.0.1",
        "rimraf": "^4.4.1",
        "xml2js": "^0.6.0"
    }
}
